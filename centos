!crypto key zeroize rsa
!crypto key generate rsa general-keys modulus 2048


**********************************************************************
TRY THE SSH CONNECTION

CORE BABA 

ssh -oKexAlgorithms=+diffie-hellman-group1-sha1 -c aes256-cbc admin@10._.1.4

************************************************************************
Create Alias on Linux - FOR COREBABA

nano ~/.bashrc
alias ssh_short='ssh -oKexAlgorithms=+diffie-hellman-group1-sha1 -c aes256-cbc'
source ~/.bashrc

ssh_short admin@10.12.1.4

**************************************************************************

ssh admin@10._.12.100.8
ssh admin@10._._.1

************************************************************************
OPEN CMD ON WINDOWS SEVER

route add 10.0.0.0 mask 255.0.0.0 10._.1.4
route add 200.0.0.0 mask 255.255.255.0 10._.1.4
************************************************************************


REMOVE SSH 

ssh-keygen -f "/root/.ssh/known_hosts" -R "10._.1.4"
ssh-keygen -f "/root/.ssh/known_hosts" -R "10._.100.8"
ssh-keygen -f "/root/.ssh/known_hosts" -R "10._._.1"




#######################################################################
# FOR WINDOWS SERVER


ALLOW SSH FOR WINDOWS SERVER
open cmd

powershell

Get-WindowsCapability -Online | ? Name -like 'OpenSSH*'

Add-WindowsCapability -Online -Name OpenSSH.Server~~~~0.0.1.0 

Start-Service -Name "sshd" 

Set-Service -Name "sshd" -StartupType Automatic 

Get-Service -Name "sshd" | Select-Object * 

New-NetFirewallRule -Name "SSH" `

-DisplayName "SSH" `
-Description "Allow SSH" `
-Profile Any `
-Direction Inbound `
-Action Allow `
-Protocol TCP `
-Program Any `
-LocalAddress Any `
-RemoteAddress Any `
-LocalPort 22 `
-RemotePort Any 




# CENTOS

pip install pywinrm


nano hosts

[win22]
0.0.0.0

[win22:vars]
ansible_user=administrator
ansible_password=C1sc0123
ansible_connection=winrm
ansible_port=5985
ansible_winrm_transport=ntlm
ansible_winrm_server_cert_validation=ignore


#SAMPLE YML FILE

---
- name: Restart Windows Server
  hosts: win22  # Replace with the appropriate host or group
  gather_facts: no
  become: yes
  tasks:
    - name: Restart the server
      win_reboot:
        reboot_timeout: 600  # Optional, set the reboot timeout in seconds
#######################################################################

MULTIPLE WINDOWS

nano hosts

[win22]
server1 ansible_host=192.168.1.101
server2 ansible_host=192.168.1.102
server3 ansible_host=192.168.1.103
# Add more servers as needed
[win22:vars]
ansible_user=administrator
ansible_password=C1sc0123
ansible_connection=winrm
ansible_port=5985
ansible_winrm_transport=ntlm
ansible_winrm_server_cert_validation=ignore

######################################################################
YML FILE

---
- name: Restart Windows Server
  hosts: 
    - win1  # Replace with the appropriate host or group
    - win2
    - win3
  gather_facts: no
  become: yes
  tasks:
    - name: Restart the server
      win_reboot:
        reboot_timeout: 600  # Optional, set the reboot timeout in seconds


