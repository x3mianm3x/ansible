nano hosts

#COREBABA
[switch]
10._.1.4

[switch:vars]
ansible_user=admin
ansible_password=pass
ansible_connection=network_cli
ansible_port=22
ansible_network_os=ios
ansible_ssh_common_args="-oKexAlgorithms=+diffie-hellman-group1-sha1 -c aes256-cbc"

#CUCM
[cucm]
10._.100.8

[cucm:vars]
ansible_user=admin
ansible_password=pass
ansible_connection=network_cli
ansible_port=22
ansible_network_os=ios

#EDGE
[edge]
10._._.1

[edge:vars]
ansible_user=admin
ansible_password=pass
